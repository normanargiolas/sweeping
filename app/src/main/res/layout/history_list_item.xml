<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_row"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/description_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/col_folder"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Folder"
            android:textSize="@dimen/msg_text_view"
            tools:gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/col_info"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/col_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="325 files"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/timestamp" />

            <TextView
                android:id="@+id/col_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/timestamp"
                android:text="256 Kb"
                android:textColor="@color/timestamp"
                android:textSize="@dimen/timestamp" />

        </LinearLayout>

        <TextView
            android:id="@+id/col_time"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="Time"
            android:textSize="@dimen/timestamp" />

    </LinearLayout>


</RelativeLayout>